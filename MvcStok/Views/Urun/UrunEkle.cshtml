@model MvcStok.Models.Entity.TBLURUNLER
    @{
        ViewBag.Title = "UrunEkle";
        Layout = "~/Views/Shared/_MainLayout.cshtml";
    }

    <form method="post" class="form-group">
        <div>
            <label>Ürün Adı</label>
            <input type="text" class="form-control" name="URUNAD" placeholder="Ürün Adını Yazınız" required="" maxlength="50" />
        </div>
        <div>
            <label>Markası</label>
            <input type="text" class="form-control" name="MARKA" placeholder="Buraya Markayı Yazınız" required="" maxlength="50" />
        </div>
        <div>
            <label>Kategori Seçiniz</label>
            @Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
        </div>
        <div>
            <label>Fiyatı</label>
            <input type="text" class="form-control" name="FIYAT" placeholder="Ürün Fiyatını Yazınız" />
        </div>
        <div>
            <label>Stok Adet</label>
            <input type="text" class="form-control" name="STOK" placeholder="Stok Bilgisini Girniz" />
        </div>
        <div style="margin-top:15px">
            <button class="btn btn-info">Ürün Ekle</button>
        </div>
    </form>
